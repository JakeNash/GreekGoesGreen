<!DOCTYPE html>
<html>

<head>
  <title><%= "GreekGoesGreen"%></title>
  <%= stylesheet_link_tag    'application',
      media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

	<style type="text/css">
     /* html, body, #main-window { height: 100%; margin: 0; padding: 0;} */
    #main-window {height:500px; width:800px; }
    </style>
   
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAxR6FERuwdL-FupaexyUx3jCFM8WnYXuU"></script>
	<!-- <script src="maptest.js" type="text/javascript"></script> -->
	<script type="text/javascript">
      function initialize() {
        console.log("test");
        var mapOptions = {
          center: {lat: 47.663735, lng: -122.309984},
          zoom: 16
        };
        var map = new google.maps.Map(document.getElementById('main-window'), mapOptions);

        var marker = new google.maps.Marker({
     		  position: {lat: 47.663735, lng: -122.309984},
      		map: map,
      		title: 'Phi Kappa Sigma'
      		//url: 'profile/index'
  		  });

  		  google.maps.event.addListener(marker, 'click', function () {
			    window.location.href = 'profile/index';
		    });

      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>

</head>

<body>

  <div id="container">

    <%= render "shared/header" %>

    <div id="content">
      <%= yield %>
    </div>

  </div>

</body>

</html>
